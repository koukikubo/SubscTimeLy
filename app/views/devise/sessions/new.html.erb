<%= render "shared/second-header"%>


<%= form_with model: @user , url: user_registration_path, class: '', local: true do |f| %>

<div class=''>
  <div class=''>
    <h1 class=''>
      会員情報入力
    </h1>
  </div>

  
  <%=render 'shared/error_messages', model: f.object%>

  <div class="">
    <div class=''>
      <label class="">ニックネーム</label>
      <span class="">必須</span>
    </div>
    <%= f.text_area :nickname, class:"", id:"nickname", placeholder:"例) ミッキー", maxlength:"20" %>
  </div>
  <div class="">
    <div class=''>
      <label class="">メールアドレス</label>
      <span class="">必須</span>
    </div>
    <%= f.email_field :email, class:"", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="">
    <div class=''>
      <label class="">パスワード</label>
      <span class="">必須</span>
    </div>
    <%= f.password_field :password, class:"", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class=''>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="">
    <div class=''>
      <label class="">パスワード(確認)</label>
      <span class="">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="">
    <p class=''>
      本人確認
    </p>
    <p class=''>
      安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
    </p>
  </div>
  <div class="">
    <div class=''>
      <label class="">お名前(全角)</label>
      <span class="">必須</span>
    </div>
    <div class=''>
      <%= f.text_area :family_name, class:"", id:"last-name", placeholder:"例) 山田" %>
      <%= f.text_area :first_name, class:"", id:"first-name", placeholder:"例) 太郎" %>
    </div>
  </div>
  <div class="">
    <div class=''>
      <label class="">お名前カナ(全角)</label>
      <span class="">必須</span>
    </div>
    <div class=''>
      <%= f.text_area :family_name_kana, class:"", id:"last-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_area :first_name_kana, class:"", id:"first-name-kana", placeholder:"例) タロウ" %>
    </div>
  </div>
  <div class="">
    <div class=''>
      <label class="">生年月日</label>
      <span class="">必須</span>
    </div>
    <div class=''>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'',
                    id:"",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <p class=''>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
  </div>
  <div class="">
    <h2 class=''>
      「会員登録」のボタンを押すことにより、
      <span>利用規約</span>
      <br>に同意したものとみなします
    </h2>
  </div>
  <div class=''>
    <%= f.submit "会員登録" ,class:"" %>
  </div>
  <p class=''>本人情報の登録について</p>
</div>
<% end %>

<%= render "shared/second-footer"%>
